.twill-doc .search-box input {
  border-radius:4px;
  line-height:2.5rem;
  border-color:#e5e5e5;
  background-position:0.6rem center;
  color:black;
}

@media (max-width: 959px) {
  .twill-doc .search-box input {
    border-color: transparent;
  }
}

.twill-doc .search-box input:focus {
  border-color:rgba(0, 0, 0, 0.5);
}

